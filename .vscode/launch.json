{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "redirectOutput": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DEV_MODE": "True"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Streamlit: Run App (BookChat)",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "env": {
                "STREAMLIT_SERVER_PORT": "8501",
                "DEV_MODE": "True",
                "STREAMLIT_SERVER_HEADLESS": "true"
            },
            "args": [
                "run",
                "${workspaceFolder}/demos/bookchat/app/app.py"
            ],
            "cwd": "${workspaceFolder}/demos/bookchat/app"
        },
        {
            "name": "Dedupe DN Labels Service",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "env": {},
            "program": "${workspaceFolder}/src/wc_simd/dedupe_service.py",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Streamlit: Run App (Dedupe DN Labels)",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "env": {
                "STREAMLIT_SERVER_PORT": "8502",
                "DEV_MODE": "True",
                "STREAMLIT_SERVER_HEADLESS": "true"
            },
            "args": [
                "run",
                "${workspaceFolder}/src/wc_simd/dn_label_train_client.py"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Streamlit: Run App (Dedupe DN Eval)",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "env": {
                "STREAMLIT_SERVER_PORT": "8503",
                "DEV_MODE": "True",
                "STREAMLIT_SERVER_HEADLESS": "true"
            },
            "args": [
                "run",
                "${workspaceFolder}/src/wc_simd/dn_label_eval.py"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Name Rec Embed",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "env": {},
            "program": "${workspaceFolder}/src/wc_simd/embed.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "--input-table",
                "name_rec_for_embedding",
                "--output-table-prefix",
                "name_rec_embeddings",
                "--endpoint",
                "http://ec2-3-231-68-18.compute-1.amazonaws.com:8080/embed",
                "--instruction",
                "INSTRUCT: Given a search query with a person's name, retrieve relevant passages that has the person mentioned. QUERY: ",
                "--batch-size",
                "32"
            ]
        },
    ]
}